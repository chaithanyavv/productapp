@{
}
<table class="table table-bordered">
    <tr>
        <th>no:</th>
        <th>Product name</th>
        <th>price</th>
        
        <th>photo</th>
    </tr>
    <th colspan="1"></th>
    </tr>
    @{int i = 0;}
    @foreach (var a in Model)
    {
        <tr>
            @{i++; }
            <td>
                @i;
            </td>

            <td>
                @a.prduct_name
            </td>
            <td>
                @a.price
            </td>
           
            <td>
                <img src="~/images/@a.photo" width="100px" height="100px" />
            </td>
            <td>
                @Html.ActionLink("Delete from Cart", "deletecart", "product", new { id = @a.product_id }, new { @class = "btn btn-danger" })

            </td>


        </tr>
    }

</table>
